<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Fragments.EditNotesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/fragment_create_notes_root_padding"
        android:paddingEnd="@dimen/fragment_create_notes_root_padding"
        android:orientation="vertical">
        <EditText
            android:id="@+id/editTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_txt_shape"
            android:padding="@dimen/fragment_create_notes_edit_title_padding"
            android:layout_marginTop="@dimen/fragment_create_notes_edit_title_margin_top"
            android:textStyle="italic"
            android:hint="Title"
            android:textColorHint="@color/fragment_create_notes_edit_text_color_hint"/>
        <EditText
            android:id="@+id/editSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_txt_shape"
            android:padding="@dimen/fragment_create_notes_edit_sub_title_padding"
            android:layout_marginTop="@dimen/fragment_create_notes_edit_sub_title_margin_top"
            android:textStyle="italic"
            android:maxLines="1"
            android:hint="Subtitle..."
            android:textColorHint="@color/fragment_create_notes_edit_text_color_hint"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/pRed"
                android:layout_width="@dimen/fragment_create_notes_p_green_layout_width"
                android:layout_height="@dimen/fragment_create_notes_p_green_layout_width"
                android:background="@drawable/red_dot"/>
            <ImageView
                android:id="@+id/pYellow"
                android:layout_width="@dimen/fragment_create_notes_p_green_layout_width"
                android:layout_height="@dimen/fragment_create_notes_p_green_layout_width"
                android:layout_marginStart="@dimen/fragment_create_notes_p_margin_start"
                android:background="@drawable/yellow_dot"/>
            <ImageView
                android:id="@+id/pGreen"
                android:layout_width="@dimen/fragment_create_notes_p_green_layout_width"
                android:layout_height="@dimen/fragment_create_notes_p_green_layout_width"
                android:layout_marginStart="@dimen/fragment_create_notes_p_margin_start"
                android:background="@drawable/green_dot"/>
        </LinearLayout>
        <EditText
            android:id="@+id/editNotes"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragment_create_notes_edit_notes_layout_height"
            android:background="@drawable/edit_txt_shape"
            android:padding="@dimen/ragment_create_notes_edit_notes_padding"
            android:layout_marginTop="@dimen/ragment_create_notes_edit_notes_layout_margit_top"
            android:textStyle="italic"
            android:gravity="start"
            android:maxLines="1"
            android:hint="Notes..."
            android:textColorHint="@color/fragment_create_notes_edit_text_color_hint"/>
    </LinearLayout>
    <!-- TODO: Update blank fragment layout -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_edit_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fragment_create_notes_btn_save_notes_layout_margin"
        android:layout_gravity="bottom|right"
        android:src="@drawable/ic_baseline_done_24"
        android:backgroundTint="@color/red_color" />

</FrameLayout>