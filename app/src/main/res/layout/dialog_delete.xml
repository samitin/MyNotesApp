<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/dialog_delete_root_margin_start"
    android:layout_marginEnd="@dimen/dialog_delete_root_margin_end"
    android:orientation="vertical">
    <View
        android:layout_width="@dimen/dialog_delete_band_layout_width"
        android:layout_height="@dimen/dialog_delete_band_layout_height"
        android:background="#a8a8a8"
        android:layout_margin="@dimen/dialog_delete_band_layout_margin"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"
        android:text="@string/dialog_description"
        android:textSize="@dimen/dialog_delete_quiston_to_delete_text_size"/>
    <TextView
        android:id="@+id/dialog_yes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_yes"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="@dimen/dialog_delete_dilog_yes_padding"
        android:background="@drawable/yes_btn"
        android:layout_marginStart="@dimen/dialog_delete_dilog_yes_margin"
        android:layout_marginEnd="@dimen/dialog_delete_dilog_yes_margin"
        android:layout_marginTop="@dimen/dialog_delete_dilog_yes_margin"/>
    <TextView
        android:id="@+id/dialog_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_no"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:padding="@dimen/dialog_delete_dialog_no_padding"
        android:gravity="center"
        android:background="@drawable/no_btn"
        android:layout_margin="@dimen/dialog_delete_dialog_no_margin"
        />
</LinearLayout>